<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <include layout="@layout/item_top_bar_common" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="如何赚优豆"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="10dp">

        <Button
            android:id="@+id/id_daily_sign"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_solid_shape"
            android:text="每日签到"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="每日签到可得优豆"
            android:textColor="@color/dark_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:padding="10dp">

        <Button
            android:id="@+id/id_good_comment"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_solid_shape"
            android:text="给APP好评"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_my_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="到应用商店给优优宝打一个五星好评"
            android:textColor="@color/dark_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/id_my_tv1"
            android:text="可以获得30粒优豆"
            android:textColor="@color/dark_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:padding="10dp">

        <Button
            android:id="@+id/id_recommend_friend"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_solid_shape"
            android:text="推荐好友"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_my_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="推荐好友注册可获20粒优豆，好友"
            android:textColor="@color/dark_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/id_my_tv2"
            android:text="分期成功，可获得(额度/20)粒优豆"
            android:textColor="@color/dark_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:padding="10dp">

        <Button
            android:id="@+id/id_apply_step"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_solid_shape"
            android:text="申请分期"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="通过审核后，可获(额度/20)粒优豆"
            android:textColor="@color/dark_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:padding="10dp">

        <Button
            android:id="@+id/id_system_deliver"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_solid_shape"
            android:text="系统随机发放"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="系统24小时不定时派送惊喜"
            android:textColor="@color/dark_gray" />
    </RelativeLayout>
</LinearLayout>