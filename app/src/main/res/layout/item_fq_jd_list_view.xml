<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/id_item_fq_jd_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/a" />

    <TextView
        android:id="@+id/id_item_fq_jd_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/id_item_fq_jd_logo"
        android:padding="2dp"
        android:text="乐视TV 超级电视S40 Air L(L403PN) 全配版 智能LED液晶电视"
        android:textColor="#333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/id_item_fq_jd_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_item_fq_jd_name"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/id_item_fq_jd_name"
        android:layout_marginTop="10dp"
        android:text="$ 1345"
        android:padding="2dp"
        android:textColor="#666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/id_item_fq_jd_fq_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/id_item_fq_jd_name"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:text="$ 1345 * 12月"
        android:textColor="#595"
        android:textSize="12sp" />
</RelativeLayout>