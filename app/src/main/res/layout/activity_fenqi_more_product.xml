<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            android:orientation="vertical">

           <include layout="@layout/item_good_banner_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/id_fenqi_more_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="佳能"
                    android:textColor="#333"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/id_fenqi_more_product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="¥ 6888"
                    android:textColor="#666"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分期价 ¥"
                        android:textColor="#666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/id_fenqi_more_product_fq_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="440.67"
                        android:textColor="#595"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" * 12月"
                        android:textColor="#666"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/id_fenqi_more_product_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="连拍最高约10张， 秒"
                    android:textColor="#666"
                    android:textSize="12sp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品详情"
                android:padding="10dp"
                android:layout_marginTop="10sp"
                android:background="#fff"
                android:textColor="#666"
                android:textSize="18sp" />
            <LinearLayout
                android:id="@+id/id_fenqi_more_product_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="10dp">


            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>