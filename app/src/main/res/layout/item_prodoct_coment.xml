<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/id_item_product_comment_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/uub_logo"
        />
    <TextView
        android:id="@+id/id_item_product_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13243569782"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/id_item_product_comment_avatar"
        android:layout_marginLeft="10dp"
        android:textColor="#333"/>

    <TextView
        android:id="@+id/id_item_product_comment_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还行吧.感觉一般"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/id_item_product_comment_avatar"
        android:layout_below="@+id/id_item_product_comment_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#333"/>

    <TextView
        android:id="@+id/id_item_product_comment_time"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8小时前"
        android:textColor="#333"
        android:textSize="12sp"/>
</RelativeLayout>