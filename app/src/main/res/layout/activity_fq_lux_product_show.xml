<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            android:orientation="vertical">

            <include layout="@layout/item_good_banner_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/id_fq_lux_show_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BALENCIAGA 女士肩背包"
                    android:textColor="#333"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/id_fq_lux_show_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 1233"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:paddingTop="10dp"/>
               <LinearLayout
                   android:layout_marginTop="8dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="分期价 "
                       android:textColor="#666"
                       android:textSize="12sp"
                       />
                   <TextView
                       android:id="@+id/id_fq_lux_show_fq_price"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="$ 124.4"
                       android:textColor="#595"
                       android:textSize="12sp"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=" * 12月"
                       android:textColor="#666"
                       android:textSize="12sp"
                       />
               </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="商品详情"
                    android:textColor="#333"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/id_fq_lux_show_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="货号：J3534"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:paddingTop="10dp"/>
                <TextView
                    android:id="@+id/id_fq_lux_show_material"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="材质：牛皮"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:paddingTop="10dp"/>
                <TextView
                    android:id="@+id/id_fq_lux_show_inwardly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="内里：人造革"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:paddingTop="10dp"/>
                <TextView
                    android:id="@+id/id_fq_lux_show_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="尺寸：30m＊35m"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:paddingTop="10dp"/>
                <TextView
                    android:id="@+id/id_fq_lux_show_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="产地：意大利"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:paddingTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>